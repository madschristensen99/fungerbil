{
  "name": "monero-bridge-circuit",
  "version": "5.4.0",
  "description": "Monero to Arbitrum Bridge ZK Circuit - Cryptographic proof of Monero transaction authenticity",
  "main": "index.js",
  "scripts": {
    "test": "mocha --timeout 1000000",
    "test:hardhat": "hardhat test",
    "test:fork": "FORK=true hardhat test test/WrappedMonero.fork.test.js",
    "test:fork:all": "FORK=true hardhat test",
    "test:gnosis": "FORK=true FORK_NETWORK=gnosis hardhat test test/WrappedMonero.gnosis.fork.test.js",
    "test:arbitrum": "FORK=true FORK_NETWORK=arbitrum hardhat test test/WrappedMonero.fork.test.js",
    "setup:stagenet": "node scripts/setupStagenetWallet.js",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "compile": "circom monero_bridge.circom --r1cs --wasm --sym",
    "compile:contracts": "hardhat compile",
    "compile:debug": "circom circuits/monero_bridge_v54.circom --r1cs --wasm --sym -o build --inspect",
    "setup": "snarkjs groth16 setup build/monero_bridge_v54.r1cs pot22_final.ptau build/monero_bridge_v54_0000.zkey",
    "contribute": "snarkjs zkey contribute build/monero_bridge_v54_0000.zkey build/monero_bridge_v54_final.zkey --name=\"First contribution\"",
    "export-vkey": "snarkjs zkey export verificationkey build/monero_bridge_v54_final.zkey build/verification_key.json",
    "export-solidity": "snarkjs zkey export solidityverifier build/monero_bridge_v54_final.zkey contracts/BridgeVerifier.sol",
    "node:fork": "FORK=true hardhat node",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost"
  },
  "dependencies": {
    "@electron-labs/ed25519-circom": "github:Electron-Labs/ed25519-circom",
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1",
    "axios": "^1.13.2",
    "base58-monero": "^0.0.5",
    "circomlibjs": "^0.1.7",
    "ffjavascript": "^0.3.0",
    "js-sha3": "^0.9.3",
    "keccak": "^3.0.4",
    "keccak-circom": "github:vocdoni/keccak256-circom",
    "keccak256": "^1.0.6",
    "monero-javascript": "^0.8.4",
    "monero-ts": "^0.11.7",
    "snarkjs": "^0.7.4",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-ignition": "^0.15.16",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.17",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@nomicfoundation/ignition-core": "^0.15.15",
    "@openzeppelin/contracts": "^5.4.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "circom_tester": "^0.0.19",
    "circomlib": "^2.0.5",
    "dotenv": "^17.2.3",
    "hardhat": "^2.28.2",
    "hardhat-gas-reporter": "^2.3.0",
    "mocha": "^10.2.0",
    "solidity-coverage": "^0.8.17",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2"
  },
  "keywords": [
    "monero",
    "bridge",
    "zksnark",
    "circom",
    "ed25519",
    "pedersen-commitment",
    "groth16",
    "arbitrum"
  ],
  "author": "FUNGERBIL Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fungerbil/monero-bridge-circuit"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
