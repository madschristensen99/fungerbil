{
  "name": "monero-zk-solana",
  "version": "1.0.0",
  "description": "Monero zk proofs with Solana verification",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "setup:circuits": "npm run build:circuits && npm run generate-keys",
    "build:circuits": "circom circuits/monero_transaction.circom --r1cs --wasm --sym --c",
    "generate-keys": "snarkjs groth16 setup circuits/monero_transaction.r1cs powersOfTau28_hez_final_10.ptau circuits/monero_transaction_final.zkey",
    "export-verification-key": "snarkjs zkey export verificationkey circuits/monero_transaction_final.zkey circuits/verification_key.json",
    "verify": "npx ts-node scripts/verify-proof.ts",
    "deploy:solana": "npm run build:solana",
    "build:solana": "cd solana-program && anchor build",
    "test:solana": "cd solana-program && anchor test",
    "start:localnet": "solana-test-validator --reset"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/spl-token": "^0.4.8",
    "@solana/web3.js": "^1.95.5",
    "big-integer": "^1.6.52",
    "bn.js": "^5.2.1",
    "circomlibjs": "^0.1.7",
    "monero-javascript": "^0.8.4",
    "poseidon-lite": "^0.2.0",
    "snarkjs": "^0.7.4"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
}
